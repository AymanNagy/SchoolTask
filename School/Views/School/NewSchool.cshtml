@model Schools
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form enctype="multipart/form-data" asp-controller="School" asp-action="NewSchool"  method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="@Model.SchoolName" class="col-form-label"></label>
        <input asp-for="@Model.SchoolName"  class="form-control" />
        <span asp-validation-for="@Model.SchoolName"></span>
    </div>
    <div>
        <button type="submit" class="btn btn-success">Save</button>
    </div>
</form>

