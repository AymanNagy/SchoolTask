@model SchoolClass
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form enctype="multipart/form-data" asp-controller="SchoolClass" asp-action="EditSchoolClass" asp-route-SchoolClassID =@Model.SchoolClassID method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="@Model.ClassName" class="col-form-label"></label>
        <input asp-for="@Model.ClassName"  class="form-control" />
        <span asp-validation-for="@Model.ClassName"></span>
    </div>
    <div>
        <button type="submit" class="btn btn-success">Save</button>
    </div>
</form>

