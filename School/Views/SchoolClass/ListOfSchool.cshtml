@model School.Models.ViewModel.SchoolClassViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12 mb-3">
        <input type="text" id="myFilter" class="form-control" onkeyup="myFunction()" placeholder="Search for names..">
    </div>
</div>


<div class="row" id="myItems">



    @foreach (var School in Model.ListOfSchools)
    {
        <div class="card card-info col-sm-3" style="margin:10px; padding:0">
                <div class="card-header">
                    <h3 class="card-title">School</h3>
                </div>
                <div class="card-body">
                    Name : @School.SchoolName
                </div>
                <div class="card-footer">
                    @Html.ActionLink("View", "ListOfClass", "SchoolClass", new { SchoolID = School.SchoolID }, new { @class = "btn btn-success" })
                </div>
            </div>
    }

</div>
