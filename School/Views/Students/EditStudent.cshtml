@model Students
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form enctype="multipart/form-data" asp-controller="Students" asp-action="EditStudent" asp-route-StudentID =@Model.StudentID method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="@Model.StudentName" class="col-form-label"></label>
        <input asp-for="@Model.StudentName"  class="form-control" />
        <span asp-validation-for="@Model.StudentName"></span>
    </div>
    <div>
        <button type="submit" class="btn btn-success">Save</button>
    </div>
</form>

