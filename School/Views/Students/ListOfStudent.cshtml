@model  School.Models.ViewModel.StudentsViewModel ;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="row">
        <div class="col-sm-12 mb-3">
            <input type="text" id="myFilter" class="form-control" onkeyup="myFunction()" placeholder="Search for names..">
        </div>
    </div>


    < class="row" id="myItems">



        @foreach (var Student in Model.ListOfStudents)
        {
            <div class="card card-info col-sm-3" style="margin:10px; padding:0">
                    <div class="card-header">
                        <h3 class="card-title">Class</h3>
                    </div>
                    <div class="card-body">
                        Name : @Student.StudentName
                    </div>
                    <div class="card-footer">
                        @Html.ActionLink("Edit", "EditStudent", "Students", new { StudentID = Student.StudentID }, new { @class = "btn btn-warning" })
                        @Html.ActionLink("Delete", "DeleteStudent", "Students", new { StudentID = Student.StudentID }, new { @class = "btn btn-danger" })
                    </div>
                </div>
            
        }

        <div class="card card-info col-sm-3" style="margin:10px; padding:0">
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">Student Name</h3>
                </div>
                <div class="card-body">
                    Add New Student
                </div>
                <div class="card-footer">
                    @Html.ActionLink("New", "NewStudent", "Students", new { SchoolClassID = Model.SchoolClassID }, new { @class = "btn btn-success" })
                </div>
            </div>
        </div>

