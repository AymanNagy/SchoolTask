@model School.Models.ViewModel.SubjectTableViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-sm-12 mb-3">
        <input type="text" id="myFilter" class="form-control" onkeyup="myFunction()" placeholder="Search for names..">
    </div>
</div>

<div class="row" id="myItems">

    @foreach (var Days in Model.ListOfDays)
    {
        
            <div class="card card-info col-sm-3" style="margin:10px; padding:0">
                <div class="card-header">
                    <h3 class="card-title">Day</h3>
                </div>
                <div class="card-body">
                    Name : @Days.DayName
                </div>
                <div class="card-footer">
                    @Html.ActionLink("Add Subjects", "ListOfTeatcherAndSubject", "SubjectTable", new { ClassID = Model.ClassID, DayID = Days.DayID }, new { @class = "btn btn-success" })
                    @Html.ActionLink("View Day Table", "ClassTableDaily", "SubjectTable", new { SchoolID = Model.SchoolID, DayID = Days.DayID }, new { @class = "btn btn-success" })

                </div>
            </div>
        
    }

    

    
</div>
