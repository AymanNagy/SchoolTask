@model  IEnumerable<School.Models.Database.SchoolClass> ;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="row">
        <div class="col-sm-12 mb-3">
            <input type="text" id="myFilter" class="form-control" onkeyup="myFunction()" placeholder="Search for names..">
        </div>
    </div>


    <div class="row" id="myItems">



        @foreach (var SchoolClass in Model)
        {
            <div class="card card-info col-sm-3" style="margin:10px; padding:0">
                    <div class="card-header">
                        <h3 class="card-title">Class</h3>
                    </div>
                    <div class="card-body">
                        Name : @SchoolClass.ClassName
                    </div>
                    <div class="card-footer">
                        @Html.ActionLink("View Days", "ListOFDays", "SubjectTable", new { ClassID = SchoolClass.SchoolClassID }, new { @class = "btn btn-success" })
                        @Html.ActionLink("View Class Table", "ClassTable", "SubjectTable", new { ClassID = SchoolClass.SchoolClassID }, new { @class = "btn btn-success" })

                    </div>
                </div>
        }

    



    </div>
