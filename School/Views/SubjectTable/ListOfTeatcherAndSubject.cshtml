@model School.Models.ViewModel.SubjectTableViewModel ;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12 mb-3">
        <input type="text" id="myFilter" class="form-control" onkeyup="myFunction()" placeholder="Search for names..">
    </div>
</div>


<div class="row" id="myItems">

    @foreach (var Subjects in Model.ListOFTeactcherSubjects)
    {
        <div class="card card-info col-sm-3" style="margin:10px; padding:0">
            <div class="card-header">
                <h3 class="card-title">Class</h3>
            </div>
            <div class="card-body">
                Name : @Subjects.teacher.TeacherName
                <br />
                Subject Name : : @Subjects.Subject.SubjectName
            </div>
            <div class="card-footer">
                @Html.ActionLink("Add", "AddSubjectToTable", "SubjectTable", new { ClassID = Model.ClassID, DayID = Model.DayID, TeatcherAndSubID = Subjects.TeachersAndSubjectID }, new { @class = "btn btn-warning" })
            </div>
        </div>
    }

</div>

@{
    var message = TempData["AlertMessage"] ?? string.Empty;
}
<script type="text/javascript">
 var message = '@message';
if(message) alert(message);
</script>
