@model IEnumerable<Teachers>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12 mb-3">
        <input type="text" id="myFilter" class="form-control" onkeyup="myFunction()" placeholder="Search for names..">
    </div>
</div>
<div class="row" id="myItems">



    @foreach (var teachers in Model)
    {
        <div class="card card-info col-sm-3" style="margin:10px; padding:0">
                <div class="card-header">
                    <h3 class="card-title">Teacher</h3>
                </div>
                <div class="card-body">
                    Name : @teachers.TeacherName
                </div>
                <div class="card-footer">
                    @Html.ActionLink("Edit", "EditTeachers", "Teachers", new { TeachersID = teachers.TeacherID }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Delete", "DeleteTeachers", "Teachers", new { TeachersID = teachers.TeacherID }, new { @class = "btn btn-danger" })
                </div>
            </div>
    }

    <div class="card card-info col-sm-3" style="margin:10px; padding:0">
            <div class="card-header">
                <h3 class="card-title">Teacher</h3>
            </div>
            <div class="card-body">
                Add New Teacher
            </div>
            <div class="card-footer">
                @Html.ActionLink("New", "NewTeachers", "Teachers", null, new { @class = "btn btn-success" })
            </div>
    </div>

