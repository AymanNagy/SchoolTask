@model IEnumerable<Teachers>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12 mb-3">
        <input type="text" id="myFilter" class="form-control" onkeyup="myFunction()" placeholder="Search for names..">
    </div>
</div>


<div class="row" id="myItems">
    @foreach (var teachers in Model)
    {
        <div class="card card-info col-sm-3" style="margin:10px; padding:0">
                <div class="card-header">
                    <h3 class="card-title">Teacher</h3>
                </div>
                <div class="card-body">
                    Name : @teachers.TeacherName
                </div>
                <div class="card-footer">
                    @Html.ActionLink("Add Subject", "ListOfSubjects", "TeachersAndSubject", new { TeacherID = teachers.TeacherID }, new { @class = "btn btn-success" })
                    @Html.ActionLink("Subjects", "ListOfTeatcherSubjects", "TeachersAndSubject", new { TeacherID = teachers.TeacherID }, new { @class = "btn btn-success" })

                </div>
        </div>
    }


</div>
