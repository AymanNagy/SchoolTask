@model IEnumerable<School.Models.Database.TeachersAndSubject>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="row">
        <div class="col-sm-12 mb-3">
            <input type="text" id="myFilter" class="form-control" onkeyup="myFunction()" placeholder="Search for names..">
        </div>
    </div>
    <div class="row" id="myItems">



        @foreach (var Subjects in Model)
        {
            <div class="card card-info col-sm-3" style="margin:10px; padding:0">
                    <div class="card-header">
                        <h3 class="card-title">Subject</h3>
                    </div>
                    <div class="card-body">
                        Name : @Subjects.Subject.SubjectName
                    </div>
                    <div class="card-footer">
                        @Html.ActionLink("Remove", "DeleteSubjects", "TeachersAndSubject", new { TeatcherAndSubjectID = Subjects.TeachersAndSubjectID }, new { @class = "btn btn-danger" })
                    </div>
                </div>
        }


    </div>
